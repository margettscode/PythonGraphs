import matplotlib.pyplot as plt
import numpy as np

y = np.array([35, 25, 25, 15])      #np.array is a function from NumPy which allows us to create arrays for visualisations - similar to a Python list but with more functionality.
mylabels = ["Pepperoni", "BBQ Chicken", "Margherita", "Hawaiian"]

plt.pie(y, labels = mylabels, startangle = 90)

# title
plt.title('Favourite pizza types fror 9D')


plt.show() 
